{
  "ignorePatterns": [
    {
      "pattern": "^http://localhost"
    },
    {
      "pattern": "^https://localhost"
    },
    {
      "pattern": "^file://"
    }
  ],
  "httpHeaders": [
    {
      "urls": ["https://www.ida.org.in/", "https://www.ada.org/"],
      "headers": {
        "User-Agent": "Mozilla/5.0 (compatible; link-checker)"
      }
    }
  ],
  "timeout": "10s",
  "retryOn429": true,
  "retryCount": 3,
  "fallbackRetryDelay": "30s",
  "aliveStatusCodes": [200, 206, 301, 302, 303, 307, 308]
}
